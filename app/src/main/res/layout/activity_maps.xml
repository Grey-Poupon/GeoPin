    Created by Petr Makarov -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:context="team3.teamproject.MapsActivity" />

    <ImageButton
        android:id="@+id/logOutButton"
        android:layout_width="@dimen/activity_log_out_button"
        android:layout_height="@dimen/activity_log_out_button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/activity_toggle_buttons_end"
        android:layout_marginTop="11dp"
        android:background="@drawable/button_environmental"
        android:contentDescription="@string/button_environmental"
        android:onClick="onLogOutClick" />

    <Spinner
        android:id="@+id/heatmapTypeSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logOutButton" />

</RelativeLayout>